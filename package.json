{
  "name": "kimulaco.com",
  "version": "0.1.0",
  "description": "",
  "author": "kimulaco",
  "private": true,
  "scripts": {
    "start": "nuxt-ts start",
    "dev": "npm-run-all -p dev:*",
    "dev:nuxt": "nuxt-ts",
    "dev:broc": "broc ./posts -o src/assets/json/blog.json -w",
    "build": "npm-run-all -s build:broc build:nuxt",
    "build:nuxt": "nuxt-ts generate",
    "build:broc": "broc ./posts -o src/assets/json/blog.json",
    "lint": "npm-run-all -p lint:*",
    "lint:script": "eslint --ext .ts,.js,.vue --ignore-path .gitignore .",
    "lint:style": "stylelint src/**/*.vue",
    "lint:post": "textlint posts/**/*.md",
    "test": "jest"
  },
  "lint-staged": {
    "*.{ts,js,vue}": "npm run lint:script",
    "*.{scss,vue}": "npm run lint:style",
    "post/*.md": "npm run lint:post"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@nuxt/typescript-runtime": "^0.2.2",
    "@nuxtjs/google-analytics": "^2.2.0",
    "normalize.css": "^8.0.1",
    "nuxt": "^2.10.2",
    "stylelint-config-prettier": "^6.0.0"
  },
  "devDependencies": {
    "@nuxt/typescript-build": "^0.3.2",
    "@nuxtjs/eslint-config": "^1.1.2",
    "@nuxtjs/eslint-config-typescript": "^0.1.3",
    "@nuxtjs/eslint-module": "^1.1.0",
    "@nuxtjs/style-resources": "^1.0.0",
    "@nuxtjs/stylelint-module": "^3.0.1",
    "@nuxtjs/svg-sprite": "^0.4.3",
    "@types/fibers": "^0.0.30",
    "@types/sass": "^1.16.0",
    "@typescript-eslint/parser": "^2.5.0",
    "@vue/test-utils": "^1.0.0-beta.27",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "broc": "^0.1.1",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-nuxt": ">=0.4.3",
    "eslint-plugin-prettier": "^3.1.1",
    "fibers": "^4.0.2",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "prettier-stylelint": "^0.4.2",
    "sass": "^1.23.1",
    "sass-loader": "^8.0.0",
    "stylelint": "^11.1.1",
    "stylelint-config-standard": "^19.0.0",
    "stylelint-scss": "^3.12.0",
    "textlint": "^11.4.0",
    "textlint-rule-preset-ja-spacing": "^2.0.1",
    "textlint-rule-preset-ja-technical-writing": "^3.1.3",
    "textlint-rule-spellcheck-tech-word": "^5.0.0",
    "vue-jest": "^4.0.0-0"
  }
}
